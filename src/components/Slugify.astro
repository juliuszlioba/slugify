<div class="flex flex-col w-full gap-2">
  <input
    id="slugify-input"
    type="text"
    class="bg-gray-900 text-center text-4xl w-full focus:ring-0 focus:outline-none py-2"
    placeholder="Text to Slugify"
  />
  <input
    id="slugify-output"
    type="text"
    class="bg-gray-900 text-center text-4xl w-full focus:ring-0 focus:outline-none py-2"
    placeholder="Result"
    disabled
  />
  <div class="flex justify-center pt-4">
    <button
      class="disabled:opacity-50 transition inline-flex items-center justify-center space-x-1.5 border focus:outline-none focus:ring-2 focus:ring-offset-2 focus:z-10 shrink-0 border-gray-700/75 focus:ring-gray-600 bg-gray-800 text-white hover:bg-gray-700 hover:border-gray-700 px-5 py-2 font-medium rounded-3xl"
    >
      <span>Copy result</span>
    </button>
  </div>
</div>

<script>
  import { slugify } from "../utils/slugify.ts"

  const input = document.querySelector('#slugify-input');
  const output = document.querySelector('#slugify-output');
  input.addEventListener('keyup', () => {
    const res = slugify(input.value);
    output.value = res;
  });
</script>